<div class="column is-one-third is-offset-one-quarter login-cards">
  <h2 class="title is-2 has-text-black has-text-weight-bold">Login</h2>
  <form class="login-form">
    <div class="field">
      <label class="label has-text-black has-text-weight-bold" for="username-email-login">Username or Email:</label>
      <div class="control">
        <input class="input" type="text" id="username-email-login" />
      </div>
    </div>

    <div class="field">
      <label class="label has-text-black has-text-weight-bold" for="password-login">Password:</label>
      <div class="control">
        <input class="input" type="password" id="password-login" />
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button class="button is-primary" type="submit">login</button>
      </div>
    </div>
  </form>
</div>